<Window x:Class="IvanArsua.TextingAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IvanArsua.TextingAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="461" Width="388">
    <Grid>
        <Label x:Name="lblSendSms" Content="Send Your SMS" HorizontalAlignment="Left" Height="28" Margin="20,20,0,0" VerticalAlignment="Top" Width="266"/>
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" HorizontalAlignment="Left" Height="28" Margin="20,61,0,0" VerticalAlignment="Top" Width="97" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.288"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="txtPhoneNumber" HorizontalAlignment="Left" Height="21" Margin="118,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="214" Margin="29,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314" TextChanged="txtMessage_TextChanged"/>
        <Label x:Name="lblMessage" Content="Message:" HorizontalAlignment="Left" Height="28" Margin="20,96,0,0" VerticalAlignment="Top" Width="97" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.288"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBlock x:Name="CharCount" Text=" 0 / 100" HorizontalAlignment="Left" Height="18" Margin="29,351,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="73"/>

    </Grid>
</Window>
